generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "log"]
}

model User {
  id                  String              @id @default(uuid())
  email               String              @unique
  name                String
  password            String
  created_at          DateTime            @default(now())
  updated_at          DateTime            @updatedAt
  deleted_at          DateTime?
  email_verified      Boolean             @default(false)
  password_reset_code PasswordResetCode[]
  links               Links[]

  @@index([email])
  @@map("users")
  @@schema("public")
}

model PasswordResetCode {
  id         String    @id @default(cuid())
  code       String    @unique @db.VarChar(6)
  used       Boolean   @default(false)
  expires_at DateTime?
  created_at DateTime  @default(now())
  user_id    String
  user       User      @relation(fields: [user_id], references: [id])

  @@unique([user_id, code])
  @@map("password_reset_code")
  @@schema("public")
}

model Links {
  id         String      @id @default(cuid())
  url        String
  short_code String      @unique
  created_at DateTime    @default(now())
  user_id    String?
  password   String?
  active     Boolean     @default(true)
  user       User?       @relation(fields: [user_id], references: [id])
  accessLogs AccessLog[]

  @@index([short_code])
  @@map("links")
  @@schema("public")
}

model AccessLog {
  id          String   @id @default(cuid())
  link_id     String
  accessed_at DateTime @default(now())
  ip_address  String
  user_agent  String
  link        Links    @relation(fields: [link_id], references: [id])

  @@index([link_id])
  @@map("access_logs")
  @@schema("public")
}

model ZipCodeLog {
  id          Int       @id @default(autoincrement())
  zipCode     String    @map("zip_code") @db.VarChar(8)
  consultedAt DateTime  @default(now()) @map("consulted_at") @db.Timestamptz()
  ipAddress   String?   @map("ip_address") @db.VarChar(45)
  userAgent   String?   @map("user_agent") @db.VarChar(500)
  city        String?   @map("city") @db.VarChar(100)
  state       String?   @map("state") @db.VarChar(2)
  success     Boolean   @default(true) @map("success")

  @@map("zip_code_logs")
  @@schema("log")
}
